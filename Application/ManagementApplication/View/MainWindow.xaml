<Window x:Class="ManagementApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagementApplication"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#f7c64b">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="255">
            <Button Command="{Binding InstrumentClickCommand}" Padding="5" Margin="10">
                <TextBlock>List of instruments</TextBlock>
            </Button>
            <Button Command="{Binding OrderClickCommand}" Padding="5" Margin="10">
                <TextBlock>List of orders</TextBlock>
            </Button>
        </StackPanel>
    </Grid>
</Window>
